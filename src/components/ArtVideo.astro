---
interface Props {
  title: string
  src: string
  ytId?: string
  width: number
}
const { title, src, ytId, width } = Astro.props
---

<div id='item'>
  <div class='title'>{title}</div>
  <video src={`https://cdn.invisyarcticfox.uk/work/${src}`} controls width={`${width}%`} />
  <div>
    {
      ytId ? (
        <a href={`https://youtu.be/${ytId}`} target='_blank' rel='noopener noreferrer'>audio source</a>
      ) : (
        <slot />
      )
    }
  </div>
</div>